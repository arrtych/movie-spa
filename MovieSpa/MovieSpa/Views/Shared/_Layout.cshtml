<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/foundation/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="app">
    <div class="grid-container">
        <div class="grid-x grid-padding-x primary callout text-center header-block">
            <div class="large-12 cell">
                <h3>Welcome to Movie SPA</h3>
            </div>
        </div>

        @RenderBody()

        <hr />
        <footer>
            <p class="text-center">@DateTime.Now.ToString("dd/MM/yyyy") - Made By Artur Lipin &copy;</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/foundation")
    @Scripts.Render("~/bundles/angular")

    <script src="~/Content/Angular/Module.js"></script>
    <script src="~/Content/Angular/Controller.js"></script>
    <script src="~/Content/Angular/Service.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
